# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/police_training_db?schema=public"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# JWT Configuration
JWT_SECRET="jwt-secret-key-change-this-in-production"

# Email Configuration (Optional - for email verification)
EMAIL_FROM="noreply@policetraining.app"
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# App Configuration
NODE_ENV="development"
PORT=3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=3600000 # 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Voice Practice Configuration
MAX_VOICE_SESSION_DURATION=300 # 5 minutes in seconds
VOICE_ACCURACY_THRESHOLD=75 # Minimum accuracy percentage

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_MAX_AGE=2592000 # 30 days in seconds

# Analytics Configuration (Optional)
ANALYTICS_API_KEY="your-analytics-key"

# File Upload Configuration (Optional)
UPLOAD_MAX_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Notification Configuration (Optional)
PUSH_NOTIFICATION_KEY="your-push-notification-key"

# Development/Debug Configuration
DEBUG_MODE=false
LOG_LEVEL="info"

# Third-party API Keys (Optional)
SPEECH_TO_TEXT_API_KEY="your-speech-api-key"
TRANSLATION_API_KEY="your-translation-api-key"